<% layout('layouts/boilerplate')%>


    <div class="row">
        <h1 class="text-center">Edit Campgrounds</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label" for="title">Title: </label>
                    <input type="text" class="form-control" name="campground[title]" value="<%= camp.title %>" id="title" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" name="campground[location]"  value="<%= camp.location %>" id="location" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Campground Price: </label>
                    <div class="input-group ">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="price">$</span>
                        </div>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="price" value="<%= camp.price %>" required name="campground[price]">
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" type="text" name="campground[description]" required  id="description"><%= camp.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Add Image(s):</label>
                    <div class="form-file custom-file">
                          <input class="form-control custom-file-input" type="file" id="image" name="image" multiple onchange="previewMultiple(event)">
                          <label for="image" class="form-label custom-file-label"></label>
                      </div>
                      <div id="formFile"></div>
                </div>
                <div class="mb-3">
                    <% camp.images.forEach(function(img, i){ %> 
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                        <label for="image-<%= i %>">Delete?</label>
                    <% }) %> 
                </div>

                <div class="mb-3">
                    <button class="btn btn-info">Update</button>
                </div>
                
            </form>
        </div>
    </div>
